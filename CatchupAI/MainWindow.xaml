<Window x:Class="CatchupAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catchup AI" Height="640" Width="640">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" Height="18" VerticalAlignment="Top">
            <MenuItem x:Name="newGameMenu" Header="New Game" Click="newGameMenu_Click"/>
        </Menu>

    </Grid>
</Window>
