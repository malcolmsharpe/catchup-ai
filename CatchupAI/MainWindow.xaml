<Window x:Class="CatchupAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catchup AI" Height="646" Width="640">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" Height="18" VerticalAlignment="Top">
            <MenuItem x:Name="newGameMenu" Header="New Game" Click="newGameMenu_Click"/>
        </Menu>
        <Button x:Name="passButton" Content="Pass" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="30" Click="passButton_Click"/>
        <Ellipse x:Name="currentPlayerCircle" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="75" Margin="10,45,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="statusBox" HorizontalAlignment="Left" Height="72" Margin="0,525,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="632" FontFamily="Courier New"/>

    </Grid>
</Window>
